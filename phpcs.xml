<?xml version="1.0"?>
<ruleset name="CMS-YL WordPress Coding Standards">
  <description>Apply WordPress Coding Standards to project-owned code only.</description>

  <file>wp-content/themes</file>
  <file>wp-content/plugins</file>

  <exclude-pattern>*/vendor/*</exclude-pattern>
  <exclude-pattern>wp-admin/*</exclude-pattern>
  <exclude-pattern>wp-includes/*</exclude-pattern>
  <exclude-pattern>wp-content/uploads/*</exclude-pattern>
  <exclude-pattern>wp-content/languages/*</exclude-pattern>
  <exclude-pattern>wp-content/cache/*</exclude-pattern>

  <rule ref="WordPress" />

  <arg name="extensions" value="php,php5,phtml" />
  <config name="testVersion" value="7.4-" />
</ruleset>